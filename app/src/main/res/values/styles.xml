<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppThemeLogin" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="myTextStyle" parent="AppTheme">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="Whitebutton" parent="Widget.AppCompat.Button">
    <item name="colorButtonNormal">@color/white</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:padding">20dp</item>

  </style>

  <style name="EditTextHint" parent="TextAppearance.AppCompat">
    <item name="colorAccent">@color/white</item>
    <item name="android:textColorHint">@color/white</item>
    <item name="colorControlNormal">@color/white</item>
    <item name="colorControlActivated">@color/white</item>
    <item name="colorControlHighlight">@color/white</item>
  </style>

  <style name="Spinner" parent="Widget.AppCompat.Spinner">
    <item name="backgroundTint">@color/white</item>
    <item name="android:textColor">@color/white</item>

  </style>

</resources>
